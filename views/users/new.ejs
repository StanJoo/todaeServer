<!-- views/users/new.ejs -->
<!-- 회원가입 화면 구성 -->

<!DOCTYPE html>
<html>
 <head>
  <% include ../partials/head %>
 </head>
 <body>
  <% include ../partials/nav %>

  <div class="container user user-new">

   <form class="user-form form-horizontal" action="/users" method="post">
    <div class="contentBox">
     <h3 class="contentBoxTop">회원가입</h3>

     <fieldset>
      <div class="form-group <%= (errors.username)?'has-error':'' %>">
       <label for="username" class="col-sm-3 control-label"></label>
       <div class="col-sm-9">
        <input class="form-control" type="text" id="username" placeholder="ID*" name="username" value="<%= user.username %>">
        <% if(errors.username){ %>
         <span class="help-block"><%= errors.username.message %></span>
        <% } %>
       </div>
      </div>
      <div class="form-group <%= (errors.name)?'has-error':'' %>">
       <label for="name" class="col-sm-3 control-label"></label>
       <div class="col-sm-9">
        <input class="form-control" type="text" id="name" placeholder="이름*" name="name" value="<%= user.name %>">
        <% if(errors.name){ %>
         <span class="help-block"><%= errors.name.message %></span>
        <% } %>
       </div>
      </div>
      <div class="form-group <%= (errors.email)?'has-error':'' %>">
       <label for="email" class="col-sm-3 control-label"></label>
       <div class="col-sm-9">
        <input class="form-control" type="text" id="email" placeholder="Email" name="email" value="<%= user.email %>">
        <% if(errors.email){ %>
         <span class="help-block"><%= errors.email.message %></span>
        <% } %>
       </div>
      </div>
      <div class="form-group <%= (errors.password)?'has-error':'' %>">
       <label for="password" class="col-sm-3 control-label"></label>
       <div class="col-sm-9">
        <input class="form-control" type="password" placeholder="비밀번호*" id="password" name="password" value="">
        <% if(errors.password){ %>
         <span class="help-block"><%= errors.password.message %></span>
        <% } %>
       </div>
      </div>
      <div class="form-group <%= (errors.passwordConfirmation)?'has-error':'' %>">
       <label for="passwordConfirmation" class="col-sm-12 control-label"></label>
       <div class="col-sm-9 col-sm-offset-3">
        <input class="form-control" type="password" placeholder="비밀번호 화인*" id="passwordConfirmation" name="passwordConfirmation" value="">
        <% if(errors.passwordConfirmation){ %>
         <span class="help-block"><%= errors.passwordConfirmation.message %></span>
        <% } %>
       </div>
      </div>
     </fieldset>
    </div>
    <label class="col-sm-3 control-label"></label>
    <div class="buttons">
     <button type="submit" class="btn btn-lg btn-default col-xs-12 lo">회원가입</button>
    </div>
    <% if(errors.unhandled){ %>
     <div class="alert alert-danger">
      <%= errors.unhandled %>
     </div>
    <% } %>
   </form>

  </div> <!-- container end -->
 </body>
</html>
